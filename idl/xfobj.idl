    dllname = "xfldr.dll";
    callstyle = oidl;

    /*
     * Internal class variables for M_XFldObject:
     *
     */

    /*
     * M_WPObject methods overridden by M_XFldObject:
     *
     */

    wpclsInitData: override;

    wpclsQuerySettingsPageSize: override;

    wpclsSetIconData: override;

  };
#endif /* __SOMIDL__ */
};


