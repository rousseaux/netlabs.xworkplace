    //# wpRestoreLong: override; removed V0.9.21 (2002-08-24) [umoeller]
    //# wpRestoreString: override; removed V0.9.21 (2002-08-24) [umoeller]
    wpRestoreData: override;

    //# 2)  WPObject query/set methods

    wpQueryDefaultView: override;
    wpQueryDefaultHelp: override;

    //# 3)  icon methods

