    // PSZ             pWszFolderBkgndImageFile;
                        // WARNING: allocated using wpAllocMem

    // default document V0.9.4 (2000-06-09) [umoeller]
    WPFileSystem    pDefaultDocument;

    PSZ             pWszDefaultDocDeferred;
                        // holds file name from wpRestoreState
                        // WARNING: allocated using wpAllocMem

    // folder contents
    ULONG           cObjects;                   // folder's objects count, always valid
    BOOL            fDisableAutoCnrAdd;

    //# pointers to original WPFolder object pointers
    //# WPObject        *ppFirstObj;        removed V0.9.20 (2002-07-25) [umoeller]
    //# WPObject        *ppLastObj;         removed V0.9.20 (2002-07-25) [umoeller]

    // tree of WPFileSystem objects
    // V0.9.16 (2002-01-26) [umoeller]
    PVOID           FileSystemsTreeRoot;        // a TREE* really
    LONG            cFileSystems;

    // tree of WPAbstract objects;
    // V0.9.16 (2002-01-26) [umoeller]
    PVOID           AbstractsTreeRoot;          // a TREE* really
    LONG            cAbstracts;

    // file-system notifications for replacement auto-refresh
    // V0.9.9 (2001-02-01) [umoeller]
    // PVOID           pvllNotifications;
                // WARNINGS: This is a PLINKLIST to XWPNOTIFY structures
                // really. This list is maintained by the functions in
