    BOOL        fInwpAddFolderView1Page;
                // TRUE while in wpAddFolderView1Page; allows us
                // to do an evil hack in wpInsertSettingsPage
                // V0.9.16 (2001-10-23) [umoeller]

    SOMObject   pMonitor;
                // ptr to read-write monitor (see fdrRequestFolderWriteMutexSem)
                // V0.9.16 (2001-10-25) [umoeller]

    //# PVOID       pfn_wpRequestFolderMutexSem;
    //# PVOID       pfn_wpReleaseFolderMutexSem;
                //# cached method pointers (see fdrRequestFolderMutexSem and
                //# fdrReleaseFolderMutexSem)
                //# V0.9.16 (2001-10-25) [umoeller]
                //# removed V0.9.20 (2002-07-25) [umoeller]

    /*
     * WPFolder methods overridden by XFolder:
     *
     */

    //# 1)  init/uninit methods

    wpInitData: override;
    wpSetup: override;
    wpObjectReady: override;

    wpUnInitData: override;
    wpFree: override;
    wpDestroyObject: override;

    wpSaveState: override;
